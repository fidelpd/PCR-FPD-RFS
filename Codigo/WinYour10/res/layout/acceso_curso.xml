<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restwall"
    android:orientation="vertical"
    android:padding="10dp"
    android:textColor="#777"
    android:textSize="16sp" >

    <Button
        android:id="@+id/procesos_estocasticos"
        android:layout_width="239dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bluebuttonfill"
        android:onClick="procesos_estocasticos"
        android:layout_marginTop="45dp" android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/variables_aleatorias"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/greenbuttonfill"
        android:onClick="variables_aleatorias"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/vectores_aleatorios"
        android:layout_width="235dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/redbuttonfill"
        android:onClick="vectores_aleatorios"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/probabilidad"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/orangebuttonfill"
        android:onClick="probabilidad"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/modelos"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blackbuttonfill"
        android:onClick="modelos"
        android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>

</LinearLayout>