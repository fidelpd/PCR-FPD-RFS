<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restwall"
    android:orientation="vertical"
    android:padding="10dp"
    android:textColor="#777"
    android:textSize="16sp" >

    <Button
        android:id="@+id/nota_actual"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/conectarc"
        android:onClick="ClickConectar"
        android:layout_marginBottom="10dp" android:layout_marginTop="40dp"/>


    <Button
        android:id="@+id/clasificacion"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/desconectard"
        android:onClick="ClickDesconectar"
        android:layout_marginBottom="10dp" android:layout_marginTop="40dp"/>


    <Button
        android:id="@+id/logros"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/salirs"
        android:onClick="ClickSalir"
        android:layout_marginBottom="10dp" android:layout_marginTop="40dp"/>

</LinearLayout>