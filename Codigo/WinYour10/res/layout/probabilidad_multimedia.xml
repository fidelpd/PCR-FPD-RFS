<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/restwall"
    android:textColor="#777"
 	android:padding="10dp"
 	android:textSize="16sp">

	
    <Button
        android:id="@+id/teorema_bayes"
        android:layout_width="256dp"
        android:layout_height="100dp"
		android:layout_gravity="center_horizontal"
        android:background="@drawable/teoremabutton"
        android:onClick="teorema_bayes" 
		android:layout_marginBottom="20dp" android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/funcion_densidad"
        android:layout_width="256dp"
        android:layout_height="100dp"
		android:layout_gravity="center_horizontal"
        android:background="@drawable/funcionbutton"
        android:onClick="funcion_densidad"  
		android:layout_marginBottom="20dp" android:layout_marginTop="20dp"/>
		
	

		<Button
        android:id="@+id/fotovideo"
        android:layout_width="256dp"
        android:layout_height="100dp"
		android:layout_gravity="center_horizontal"
        android:background="@drawable/fotovideobutton"
		android:onClick="fotovideo"  
		android:layout_marginBottom="10dp" android:layout_marginTop="20dp"/>

</LinearLayout>